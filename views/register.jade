doctype html
html(lang='en')
  head
    title Register Scrumblr+
    script(src='http://code.jquery.com/jquery-3.5.1.min.js' integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=' crossorigin='anonymous')
  body
    h1
      | Register Scrumblr+
      form(method='post' action='/doRegister')
        p#duplicateUserWanringMsg(style='display:none') The username is already in use, please try another one.
        p
          input(name='displayName' type='text' placeholder='your display name, e.g. Tommy, Darth Vador, etc.')
        p
          input(name='username' type='text' placeholder='username')
        p
          input(name='password' type='password' placeholder='password')
        p
          input(type='submit')
    script.
      function getUrlParameter(sParam) {
      var sPageURL = window.location.search.substring(1),
      sURLVariables = sPageURL.split('&'),
      sParameterName,
      i;
      for (i = 0; i < sURLVariables.length; i++) {
      sParameterName = sURLVariables[i].split('=');
      if (sParameterName[0] === sParam) {
      return sParameterName[1] === undefined ? true : decodeURIComponent(sParameterName[1]);
      }
      }
      }
      $(function() {
      if(getUrlParameter("userExists") == "true") {
      $("#duplicateUserWanringMsg").show();
      }
      else
      $("#duplicateUserWanringMsg").hide();
      });
