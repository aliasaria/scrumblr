		span.you-text (you)
		ul#names-ul

	div.Box 
		div#container(style='width: 100%;height:100%;')

	#Creation-dialog-form(title="Create issue")
		form
			fieldset
				div.FormGroup
					lable(for="issue_type") Issue Type*
					select#issue_type.formselect(type="text" name="issue_type")
						option Story
						option Task
						option Bug
				div.FormGroup
					lable(for="priority") Priority*
					select#priority.formselect(type="text" name="priority")
						option Highest
						option High
						option(selected="") Medium
						option Low
						option Lowest
				// <input type="text" name="issue_type" id="issue_type" class="text ui-widget-content ui-corner-all">
				div.FormGroup
					label(for="summary") Summary*
					input#summary.forminput(type="text" name="summary" )
				div.FormGroup
					label(for="assignee") Assignee*
					input#assignee.forminput(type="text" name="assignee")
				// <input type="text" name="priority" id="priority" class="text ui-widget-content ui-corner-all">
				div.FormGroup
					label(for="story_points") Story Points*
					input.Input#story_points.forminput(type="text" name="story_points")
				// Allow form submission with keyboard without duplicating the dialog button
				input(type="submit" tabindex="-1" style="position:absolute; top:-1000px")
	



